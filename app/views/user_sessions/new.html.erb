<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="info_form">
    <%= f.label :email, "E-MAIL" %><br />
    <%= f.text_field :email, :class => "loginput" %>
  </div>

  <div class="info_form">
      <%= f.label :password, "CONTRASENYA" %><br />
      <%= f.password_field :password, :class => "loginput" %><br /><br />
      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Recorda'm la prÃ²xima vegada" %>
  </div>


  <div class="center">
    <%= f.submit "Entra", :class => "button" %>
  </div>


<% end %>

